<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VetMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Surface / background in dark -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>
        <item name="colorOnBackground">@color/colorOnPrimary</item>

        <!-- Error -->
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/grayMedium</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariant</item>
    </style>
</resources>